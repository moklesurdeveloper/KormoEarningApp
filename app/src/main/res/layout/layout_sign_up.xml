<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/toolbarColor"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_round"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="50dp"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/txtLayoutNameSignUp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/sign_bg"
            android:textColorHint="#403F3F"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sign_bg"
                android:id="@+id/txtNameSignUp"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/ic_user"
                android:textColor="@color/black"
                android:textColorHint="#403F3F"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/txtLayoutEmailSignUp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/sign_bg"
            android:textColorHint="#403F3F"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtEmailSignUp"
                android:background="@drawable/sign_bg"
                android:hint="Validity number"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/ic_email"
                android:textColor="@color/black"
                android:textColorHint="#403F3F"
                android:inputType="number"
                android:textSize="15sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/txtLayoutPasswordSignUp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/sign_bg"
            android:textColorHint="#403F3F"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPasswordSignUp"
                android:background="@drawable/sign_bg"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/ic_password"
                android:textColor="@color/black"
                android:textColorHint="#403F3F"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="15sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/txtLayoutConfrimSignUp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/sign_bg"
            android:textColorHint="#403F3F"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtConfirmSignUp"
                android:background="@drawable/sign_bg"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/ic_password"
                android:textColor="@color/black"
                android:textColorHint="#403F3F"
                android:hint="Confirm"
                android:inputType="textPassword"
                android:textSize="15sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:background="@drawable/sign_bg"
            android:textColorHint="#403F3F"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtReferSignUp"
                android:background="@drawable/sign_bg"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/ic_user"
                android:textColor="@color/black"
                android:textColorHint="#403F3F"
                android:hint="Refer"
                android:inputType="textPassword"
                android:textSize="15sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:visibility="gone"
            android:id="@+id/countryList"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498" />




        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            >

            <TextView
                android:id="@+id/btnSignUp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/sign_bg"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Sign up"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="17dp" />
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:fontFamily="sans-serif-black"
                android:text="Already have account?" />

            <TextView
                android:id="@+id/txtSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:fontFamily="serif"
                android:text="Log in"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>




</androidx.core.widget.NestedScrollView>